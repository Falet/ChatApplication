<Window x:Class="Client.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
		xmlns:interactivity="http://prismlibrary.com/"
		interactivity:ViewModelLocator.AutoWireViewModel="True"
        xmlns:local="clr-namespace:Client"
		xmlns:view="clr-namespace:Client.Views"
		xmlns:viewModel="clr-namespace:Client.ViewModels"
		mc:Ignorable="d"
        Title="MainWindow" Height="600" Width="1000"

		d:DataContext="{d:DesignInstance viewModel:ControlVisibility}">
	<Grid>
		<view:LoginMenu Visibility="{Binding VisibilityLoginMenu}"></view:LoginMenu>
		<view:ControlNavigationChats Visibility="{Binding VisibilityNavigationChat}"></view:ControlNavigationChats>
		<Button Margin="330,181,0,0" Command ="{Binding SendCommand}"/>
	</Grid>
</Window>
