<UserControl x:Class="Client.Views.Chat"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Client.Views" xmlns:view="clr-namespace:Client.Views"
			 xmlns:sys="clr-namespace:System;assembly=mscorlib"
			 mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="4*"/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="615*"/>
			<ColumnDefinition Width="180*"/>
		</Grid.ColumnDefinitions>

        <ListBox x:Name="ListMessagesAtChat" Grid.Row="0" Grid.Column="0"/>
        <TextBox Grid.Row="1" Grid.Column="0" Text="{Binding CurrentText}" TextWrapping="Wrap"/>
        <Button Grid.Row="1" Grid.Column="1" Content="Send"
                Command="{Binding SendMessage}"/>
        <view:ClientsAtChat  Grid.Row="0" Grid.Column="1"/>
        <view:AddClientsToChat  Grid.Row="0" Grid.Column="1" Visibility="Hidden"/>
    </Grid>
</UserControl>
